            <Tooltip text="Clear the Item Type text field" />
         </tooltip>
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button fx:id="btnUpdate" layoutX="160.0" layoutY="158.0" mnemonicParsing="false" onAction="#btnUpdateAP" prefHeight="25.0" prefWidth="80.0" text="UPDATE">
