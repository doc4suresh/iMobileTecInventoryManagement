            <Tooltip text="Enter new Type for inser in to Datebase" />
         </tooltip></TextField>
      <Button fx:id="btnAdd" layoutX="160.0" layoutY="123.0" mnemonicParsing="false" onAction="#btnAddAP" prefHeight="25.0" prefWidth="80.0" text="ADD">
