<AnchorPane id="AnchorPane" prefHeight="330.0" prefWidth="560.0" stylesheets="@../css/commonStyles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.ItemTypeController">
   <children>
      <ImageView fitHeight="330.0" fitWidth="560.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../image/ItemTypeBack.png" />
         </image>
      </ImageView>
      <Label layoutX="32.0" layoutY="81.0" text="Item Type" />
      <TextField fx:id="txtItemType" layoutX="96.0" layoutY="77.0" onKeyReleased="#txtItemTypeKR" prefHeight="25.0" prefWidth="208.0" promptText="Enter New Item Type" styleClass="combobox">
