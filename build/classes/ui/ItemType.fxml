            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button fx:id="btnDelete" layoutX="160.0" layoutY="193.0" mnemonicParsing="false" onAction="#btnDeleteAP" prefHeight="25.0" prefWidth="80.0" text="DELETE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <ListView fx:id="lstItemType" layoutX="325.0" layoutY="76.0" onMouseClicked="#lstItemTypeMC" prefHeight="211.0" prefWidth="200.0">
         <tooltip>
            <Tooltip text="Click on the Type for UPDATE or DELETE" />
         </tooltip></ListView>
   </children>
